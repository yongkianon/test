<test>

  <!-- vi core-site.xml -->
  <configuration>
    <!--
    fs.default.name - MRv1
    fs.defaultFS    - YARN
    -->
    <property>
      <name>fs.defaultFS</name>
      <value>hdfs://SHT</value>
    </property>

    <property>
      <name>dfs.journalnode.edits.dir</name>
      <value>/data/jn</value>
    </property>

    <property>
      <name>dfs.ha.fencing.methods</name>
      <value>sshfence</value>
    </property>

    <property>
      <name>dfs.ha.fencing.ssh.private-key-files</name>
      <value>/home/hadoop/.ssh/id_rsa</value>
    </property>

    <property>
      <name>ha.zookeeper.quorum</name>
      <value>nn1:2181,nn2:2181,dn1:2181</value>
    </property>

  </configuration>


  <!-- vi hdfs-site.xml -->

  <configuration>

    <!-- master nn1, nn2, JobTracker and YARN ResourceManager -->

    <property>
      <name>dfs.namenode.shared.edits.dir</name>
      <value>qjournal://jn1:8485;jn2:8485;jn3:8485/SHT</value>
    </property>

    <!--
        <property>
          <name>dfs.ha.namenode.id</name>
          nnX = either value nn1 or nn2
          <value>nnX</value>
        </property>
    -->
    <property>
      <!-- OLD = dfs.name.dir -->
      <name>dfs.namenode.name.dir</name>
      <value>/data/nn/fsimage</value>
    </property>

    <property>
      <!-- OLD = dfs.data.dir -->
      <name>dfs.datanode.data.dir</name>
      <value>/data/dn/hdfs</value>
    </property>

    <property>
      <name>dfs.replication</name>
      <value>3</value>
    </property>

    <property>
      <name>dfs.namenode.num.checkpoints.retained</name>
      <value>3</value>
    </property>

    <property>
      <name>dfs.namenode.num.extra.edits.retained</name>
      <value>10</value>
    </property>

    <property>
      <name>dfs.permissions.enabled</name>
      <value>false</value>
    </property>

    <property>
      <name>dfs.nameservices</name>
      <value>SHT</value>
    </property>

    <property>
      <name>dfs.ha.namenodes.SHT</name>
      <value>nn1,nn2</value>
    </property>

    <property>
      <name>dfs.namenode.rpc-address.SHT.nn1</name>
      <value>nn1:9000</value>
    </property>
    <property>
      <name>dfs.namenode.rpc-address.SHT.nn2</name>
      <value>nn2:9000</value>
    </property>

    <!-- rpc-address, servicerpc-address, http-address, https-address -->

    <property>
      <name>dfs.namenode.http-address.SHT.nn1</name>
      <value>nn1:8080</value>
    </property>
    <property>
      <name>dfs.namenode.http-address.SHT.nn2</name>
      <value>nn2:8080</value>
    </property>

    <property>
      <name>dfs.client.failover.proxy.provider.SHT</name>
      <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
    </property>

    <property>
      <name>dfs.ha.automatic-failover.enabled</name>
      <value>true</value>
    </property>

    <property>
      <name>dfs.hosts.exclude</name>
      <value>/home/hadoop/etc/hadoop/dfs.hosts.exclude.txt</value>
      <description>DFS exclude hosts</description>
    </property>

  </configuration>

</test>


